{% extends '::base.html.twig' %}

{% block headline %}
  {{ post.getTitle() }}
{% endblock %}

{% block content %}
  <p>{{ post.getSubtitle() }}</p>
  <p>{{ post.getText() }}</p>
  {% media post.image, 'main' %}
  {{ post.createdAt.date | localizeddate('short', 'none') }}
  <div>
    <h3>{{ 'posts.other' | trans }}</h3>
    {% for p in other_posts %}
      <div>
        <b><a href="{{ path('slash_app_blog_show', {id: p.id}) }}">{{ p.getTitle() }}</a></b>
        <p>{{ p.getSubtitle() }}</p>
        {{ p.createdAt.date | localizeddate('short', 'none') }}
        {% media p.image, 'main' %}
      </div>
    {% endfor %}
  </div>
{% endblock %}
