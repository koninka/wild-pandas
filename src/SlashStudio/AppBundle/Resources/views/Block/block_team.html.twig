{% extends sonata_block.templates.block_base %}

{% block block %}
{# is_granted('ROLE_SUPER_ADMIN') #}
  {% if true and admin %}
    <div class="panel panel-default">
      <div class="panel-heading">
        <h3 class="box-title">{{ admin.label|trans({}, admin.translationdomain) }}</h3>
      </div>
      <ul class="sonata-blog-post-container list-group">
        <li class="list-group-item">{{ team.name }}</li>
        <li class="list-group-item">{{ team.description }}</li>
      </ul>
      <a href="{{ admin.generateUrl('edit', {id: team.id}) }}" class="btn btn-primary btn-block"><i class="fa fa-edit"></i>{% trans from 'SonataAdminBundle' %}link_action_edit{% endtrans %}</a>
    </div>
  {% endif %}
{% endblock %}