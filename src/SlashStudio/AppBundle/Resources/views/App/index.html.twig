          <div class="img col-sm-3">
            {% image '@SlashStudioAppBundle/Resources/public/images/g1.jpg' %}
                <img src="{{ asset_url }}" alt="Дикие панды!" />
            {% endimage %}
          </div>
        </div>
        <div class="gallery row">
          <div class="img col-sm-3">
            {% image '@SlashStudioAppBundle/Resources/public/images/g1.jpg' %}
                <img src="{{ asset_url }}" alt="Дикие панды!" />
            {% endimage %}
