{% extends '::base.html.twig' %}


{% block body %}
  <h1>Wild Pandas Home Page!!</h1>

  <div>
    <h2>This is slider!</h2>
    {% for slide in slides %}
      <div>
        {{ slide.title }}
        {{ slide.subtitle }}
      </div>
    {% endfor %}
  </div>

  <div>
    <h2>This is a Team Section!</h2>
    <h3>{{ 'title.team' | trans }}</h3>
    <p>{{ team.description }}</p>
    <b>Achievements</b>
    <ul>
      {% for achievement in team.achievements %}
        <li>{{ achievement.name }}</li>
      {% endfor %}
    </ul>
    <div>
      <h3>{{ 'title.contacts' | trans }}</h3>
      <div>
        {% if team.captain %}
          <h4>{{ 'title.team.captain' | trans }}</h4>
          {{ team.captain.name }} {{ team.captain.surname }}
          {{ team.captain.phone }}
          {{ team.captain.email }}
        {% endif %}
      </div>
      <div>
        {% if team.managerName %}
          <h4>{{ 'title.team.manager' | trans }}</h4>
          {{ team.managerName }}
          {{ team.managerPhone }}
          {{ team.managerEmail }}
        {% endif %}
      </div>
    </div>
  </div>

  <div>
    <h2><a href="#">{{ 'navigation.players' | trans({}, 'navigation') }}</a></h2>
  {% for player in players %}
    <div>
      {{ 'player.name' | trans({}, 'player') }}: {{ player.getName() }}
      {{ 'player.surname' | trans({}, 'player') }}: {{ player.getSurname() }}
    </div>
  {% endfor %}
  </div>

  <div>
    <h2><a href="{{ path('slash_app_products_list') }}">{{ 'product.title' | trans }}</a></h2>
    {% for product in products %}
      <div>
        {{ 'product.name' | trans }} : {{ product.name }}
        {{ 'product.price' | trans }} : {{ product.price }}
      </div>
    {% endfor %}
  </div>
{% endblock %}