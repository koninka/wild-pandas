          </div>
        </div>
      </section>
      <section class="video col-sm-4">
        <h1 class="blue_h1"><span>{{ 'navigation.video' | trans({}, 'navigation') }}<div class="line"></div></span></h1>
        {% for video in videos %}
          <div>{% media video, 'medium' %}</div>
        {% endfor %}
      </section>
    </div>

    <section class="attr">
      <a href="{{ path('slash_app_products_list') }}" class="h1_a"><h1 class="blue_h1"><span>{{ 'navigation.products' | trans({}, 'navigation') }}<div class="line"></div></span></h1></a>
      <div class="row">
        {% for product in products %}
          <div class="col-xs-3">
            <article>
              <div class="photo">
                <a href="{{ path('slash_app_product_show', {id: product.id}) }}">{% media product.image, 'small' %}</a>
              </div>
              <a href="{{ path('slash_app_product_show', {id: product.id}) }}">{{ product.getName() }}
              </a>
              <div class="price">{{ 'product.price' | trans }}: {{ product.price }}</div>
            </article>
          </div>
        {% endfor %}
      </div>
    </section>

    <section class="cheerleaders">
      <a href="{{ path('slash_app_chearleaders') }}" class="h1_a"><h1 class="blue_h1"><span>{{ 'navigation.cheerleader' | trans({}, 'navigation') }}<div class="line"></div></span></h1></a>
      <div class="row">
        <div class="col-sm-9">
          <div class="main_photo">
            {% media cl_team.image, 'cl_main' %}
          </div>
          <div class="girls">
            {% for girl in cheerleaders %}<div class="girl">
                <div class="photo">{% media girl.photo, 'small' %}</div>
                {{ girl.getName() }}<br />
                {{ girl.getSurname() }}
            </div>{% endfor %}
          </div>
        </div>
        <aside class="col-sm-3">
          <div class="ad_block">
            1
          </div>
          <div class="ad_block">
            2
          </div>
        </aside>
      </div>
    </section>

    <section class="partners">
      <a href="{{ path('slash_app_partnership') }}" class="h1_a"><h1 class="blue_h1"><span>{{ 'navigation.partnership' | trans({}, 'navigation') }}<div class="line"></div></span></h1></a>
      <div class="block">
        <h2>{{ 'title.sponsors' | trans }}</h2>
        {% for s in partnership.sponsors %}
          {% media s.image, 'logo' with {alt: s.getName()} %}
          <!--<span class="name">{{ s.getName() }}</span>-->
        {% endfor %}
      </div>
      <div class="block">
        <h2>{{ 'title.partners' | trans }}</h2>
        {% for p in partnership.partners %}
          {% media p.image, 'logo' with {alt: p.getName()} %}
          <!--<span class="name">{{ p.getName() }}</span>-->
        {% endfor %}
      </div>
      <div class="descr text">{{ 'partnership.description' | trans }}</div>
    </div>
  </section>
{% endblock %}