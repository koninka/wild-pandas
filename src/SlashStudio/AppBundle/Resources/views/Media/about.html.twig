{% extends '::base.html.twig' %}

{% block body %}
  <h1>{{ 'navigation.media_about' | trans({}, 'navigation') }}</h1>
  <div class="count">
    {{ pagination.getTotalItemCount }}
  </div>
  {% for p in pagination %}
    <div>
      <b><a href="{{ path('slash_app_media_show', {id: p.id}) }}">{{ p.getTitle() }}</a></b>
      <p>{{ p.getSubtitle() }}</p>
    </div>
  {% endfor %}
  <div class="navigation">
    {{ knp_pagination_render(pagination) }}
  </div>
{% endblock %}
