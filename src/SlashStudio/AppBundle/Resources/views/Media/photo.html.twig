{% extends '::base.html.twig' %}

{% block head_style %}
  {{ parent() }}
  {% stylesheets
    '@SlashStudioAppBundle/Resources/public/less/photos_videos.less'
    '@SlashStudioAppBundle/Resources/public/less/blog.less'
  %}
    <link href="{{ asset_url }}" type="text/css" rel="stylesheet" media="screen" />
  {% endstylesheets %}
{% endblock head_style %}

{% block content_row %}
  <section class="media_photo">
    <h1 class="blue_h1"><span>{{ 'navigation.media_about' | trans({}, 'navigation') }}<div class="line"></div></span></h1>
    <h2 class="sub">Lorem ipsum dolor sit amet, consectetur adipisicing elit</h2>
    <div class="row">
      <div class="photos col-xs-8">
        <div class="row more_one">
          {% for photo in pagination %}
            <div class="photo col-xs-6">
              <a href="#">{% media photo, 'medium' %}</a>
            </div>
            {% if loop.index % 2 == 0 and not loop.last %}
              </div><div class="row more_one">
            {% endif %}
          {% endfor %}
        </div>
        
      </div>
      <aside class="col-xs-4">
        {% include 'SlashStudioAppBundle:Aside:instagram.aside.html.twig' %}
      </aside>
    </div>
  </section>
{% endblock %}
